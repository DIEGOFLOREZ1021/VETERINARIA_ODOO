<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_veterinario_tree" model="ir.ui.view">
        <field name="name">gestion_personal_veterinaria.veterinario.tree</field>
        <field name="model">gestion_personal_veterinaria.veterinario</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="specialty"/>
                <field name="phone"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_veterinario_form" model="ir.ui.view">
        <field name="name">gestion_personal_veterinaria.veterinario.form</field>
        <field name="model">gestion_personal_veterinaria.veterinario</field>
        <field name="arch" type="xml">
            <form string="Veterinario">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="specialty"/>
                    </group>
                    <group>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
